<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_DSWI_GP3</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h4 class="text-center mb-4">Panel Administrador</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Usuarios" asp-action="Index">
                        <i class="bi bi-people-fill"></i> Usuarios
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Compras" asp-action="Index">
                        <i class="bi bi-cart-fill"></i> Compras
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Eventos" asp-action="Index">
                        <i class="bi bi-calendar-event-fill"></i> Eventos
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Reportes" asp-action="Index">
                        <i class="bi bi-graph-up"></i> Reportes
                    </a>
                </li>
                <li class="nav-item mt-4">
                    <a class="nav-link text-danger" asp-controller="Login" asp-action="Logout">
                        <i class="bi bi-box-arrow-left"></i> Cerrar sesión
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <main class="p-4 flex-grow-1">
            @RenderBody() <!-- Aquí se renderizará el contenido de las vistas -->
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
