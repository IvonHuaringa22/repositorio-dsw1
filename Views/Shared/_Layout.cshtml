<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TU TICKET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_DSWI_GP3.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body style="background-color: #111; color: white;">
    <!-- Imagen de portada -->
    <div class="text-center mb-4">
        <img src="~/img/portada.jpg" class="img-fluid w-100" style="max-height: 250px; object-fit: cover;" alt="Portada" />
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg shadow-sm" style="background-color: #1c1c1c; border-bottom: 3px solid #c69aff;">
        <div class="container">
            <!-- LOGO + Inicio + Eventos (IZQUIERDA) -->
            <a class="navbar-brand d-flex align-items-center me-4" asp-controller="PanelCliente" asp-action="Index">
                <img src="~/img/logo.png" alt="Logo" width="48" height="48" class="rounded-circle me-2">
            </a>

            <!-- BOTÓN RESPONSIVE -->
            <button class="navbar-toggler text-white border-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <!-- IZQUIERDA -->
                <ul class="navbar-nav d-flex flex-row gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" asp-controller="PanelCliente" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i>Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" asp-controller="PanelCliente" asp-action="Eventos">
                            <i class="bi bi-calendar-event me-1"></i>Eventos
                        </a>
                    </li>
                </ul>

                <!-- DERECHA -->
                <ul class="navbar-nav d-flex flex-row gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" href="#">
                            <i class="bi bi-envelope me-1"></i>Contacto
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light fw-semibold" asp-controller="PanelAdmin" asp-action="Index">
                            <i class="bi bi-person me-1"></i>Mi cuenta
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-light position-relative" href="#">
                            <i class="bi bi-cart3 fs-5"></i>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>




    <!-- Contenido principal -->
    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center text-white py-3"
            style="background-color: #1c1c1c; border-top: 3px solid #c69aff;">
        &copy; 2025 - TICKET EASY - Todos los derechos reservados
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
