<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TU TICKET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_DSWI_GP3.styles.css" asp-append-version="true" />
</head>

<body style="background-color: #111; color: white;">
    <!-- Imagen de portada -->
    <div class="text-center mb-4">
        <img src="~/img/portada.jpg" class="img-fluid w-100" style="max-height: 250px; object-fit: cover;" alt="Portada" />
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #1c1c1c; border-bottom: 3px solid #c69aff;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#" style="color: #c69aff;">TICKET EASY</a>
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarAdmin" aria-controls="navbarAdmin" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarAdmin">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Login" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="PanelAdmin" asp-action="Index">Regístrate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Eventos" asp-action="Index">Próximos Eventos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Blog" asp-action="Index">Blog</a>
                    </li>
                </ul>
                @if (!string.IsNullOrEmpty(Context.Session.GetString("Nombre")))
                {
                    <span class="navbar-text text-white me-3">
                        Bienvenido: @Context.Session.GetString("Nombre")
                    </span>
                }

                <a class="btn btn-outline-light" style="border-color: #c69aff; color: #c69aff;" asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Imágenes inferiores -->
    <div class="container text-center my-5">
        <div class="row">
            <div class="col-md-4 mb-3">
                <img src="~/img/img1.jpg" class="img-fluid rounded shadow" alt="imagen 1" />
            </div>
            <div class="col-md-4 mb-3">
                <img src="~/img/img2.jpg" class="img-fluid rounded shadow" alt="imagen 2" />
            </div>
            <div class="col-md-4 mb-3">
                <img src="~/img/img3.jpg" class="img-fluid rounded shadow" alt="imagen 3" />
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center text-white py-3" style="background-color: #1c1c1c; border-top: 3px solid #c69aff;">
        &copy; 2025 - TICKET EASY - Todos los derechos reservados
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
