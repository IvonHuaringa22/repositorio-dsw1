@model Proyecto_DSWI_GP3.Models.Usuarios

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center align-items-center">
        <!-- Imagen a la izquierda -->
        <div class="col-md-6 d-none d-md-block">
            <img src="~/img/bienvenido.jpg" class="img-fluid rounded shadow" alt="Imagen de bienvenida" />
        </div>

        <!-- Formulario a la derecha -->
        <div class="col-md-6">
            <div class="card shadow-lg border-0" style="background-color: #1c1c1c; color: white;">
                <div class="card-header text-center" style="background-color: #c69aff; color: #111;">
                    <h4 class="mb-0 fw-bold">Iniciar Sesión</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Login" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Correo electrónico:</label>
                            <input asp-for="Correo" class="form-control bg-dark text-white border-secondary" type="email" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña:</label>
                            <input asp-for="Contraseña" class="form-control bg-dark text-white border-secondary" type="password" required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn" style="background-color: #c69aff; color: #111;">Ingresa</button>
                        </div>
                    </form>

                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-danger mt-3 text-center" role="alert">
                            @ViewBag.Mensaje
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
