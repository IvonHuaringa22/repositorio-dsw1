@model Proyecto_DSWI_GP3.Models.Usuarios

@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Detalles del Usuario</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4 border rounded shadow">
                <dl class="row">
                    <dt class="col-sm-4">ID del Usuario</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdUsuario)</dd>

                    <dt class="col-sm-4">Nombre Completo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4">Correo Electrónico</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Correo)</dd>

                    <dt class="col-sm-4">Rol del Usuario</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoUsuario)</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar Usuario
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>