@model Proyecto_DSWI_GP3.Models.Usuarios

@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Actualizar Datos del Usuario</h1>

<hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Campo oculto para ID -->
                <input asp-for="IdUsuario" type="hidden" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-semibold">Nombre completo</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre actualizado" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label fw-semibold">Correo electrónico</label>
                    <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
                    <span asp-validation-for="Correo" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoUsuario" class="form-label fw-semibold">Tipo de usuario</label>
                    <select asp-for="TipoUsuario" class="form-select" asp-items="ViewBag.TiposUsuario">
                        <option value="">-- Seleccione un tipo --</option>
                    </select>
                    <span asp-validation-for="TipoUsuario" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
