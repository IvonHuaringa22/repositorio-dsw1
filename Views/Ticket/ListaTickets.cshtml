@model IEnumerable<Proyecto_DSWI_GP3.Models.Tickets>

@{
    ViewData["Title"] = "Lista de Tickets";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">    
    <h1 class="mb-4 text-center">Lista de Tickets</h1>

    <hr />

    <table class="table table-striped table-borderless text-white">
        <thead style="background-color: #2a2a2a;">
            <tr>
                <th>Código Ticket</th>
                <th>Código Compra</th>
                <th>Zona</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="background-color: #1e1e1e;">
                    <td>@item.IdTicket</td>
                    <td>@item.IdCompra</td>
                    <td>@item.IdZona</td>
                    <td>
                        <a asp-action="TicketsPorId" asp-route-id="@item.IdTicket" class="btn btn-sm btn-outline-info me-1">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        @* <a asp-action="Eliminar" asp-route-idCompra="@item.IdCompra" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
