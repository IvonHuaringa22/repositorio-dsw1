@model Proyecto_DSWI_GP3.Models.Eventos

@{
    ViewData["Title"] = "Detalles del Evento";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Detalles del Evento</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4 border rounded shadow">
                <dl class="row">
                    <dt class="col-sm-4">ID del Evento</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdEvento)</dd>

                    <dt class="col-sm-4">Nombre del Evento</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreEvento)</dd>

                    <dt class="col-sm-4">Tipo de Evento</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.TipoEvento)</dd>

                    <dt class="col-sm-4">Lugar</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Lugar)</dd>

                    <dt class="col-sm-4">Fecha</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

                    <dt class="col-sm-4">Hora</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Hora)</dd>

                    <dt class="col-sm-4">Descripción</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="EditEventoAdmin" asp-route-id="@Model.IdEvento" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar Evento
        </a>
        <a asp-action="ListaEventosAdmin" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Regresar a la lista
        </a>
    </div>
</div>