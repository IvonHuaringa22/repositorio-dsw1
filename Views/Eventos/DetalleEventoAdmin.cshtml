@model Proyecto_DSWI_GP3.Models.Eventos

@{
    ViewData["Title"] = "Detalles del Evento";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Detalles del Evento</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border rounded p-4 shadow-sm bg-white">
                <div class="mb-3">
                    <label class="form-label fw-bold">Código del Evento:</label>
                    <div>@Html.DisplayFor(model => model.IdEvento)</div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre del Evento:</label>
                    <div>@Html.DisplayFor(model => model.NombreEvento)</div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Tipo de Evento:</label>
                    <div>@Html.DisplayFor(model => model.TipoEvento)</div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Lugar:</label>
                    <div>@Html.DisplayFor(model => model.Lugar)</div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Fecha:</label>
                    <div>@Html.DisplayFor(model => model.Fecha)</div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Hora:</label>
                    <div>@Html.DisplayFor(model => model.Hora)</div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Descripción:</label>
                    <div>@Html.DisplayFor(model => model.Descripcion)</div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="EditEventoAdmin" asp-route-id="@Model.IdEvento" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Editar Evento
                </a>
                <a asp-action="ListaEventosAdmin" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Regresar a la lista
                </a>
            </div>
        </div>
    </div>
</div>
