@model Proyecto_DSWI_GP3.Models.Eventos

@{
    ViewData["Title"] = "Crear Evento";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Registrar Nuevo Evento</h1>
    <hr />

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="CrearEventoAdmin">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="NombreEvento" class="form-label">Nombre del Evento</label>
                    <input asp-for="NombreEvento" class="form-control" />
                    <span asp-validation-for="NombreEvento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TipoEvento" class="form-label">Tipo de Evento</label>
                    <input asp-for="TipoEvento" class="form-control" />
                    <span asp-validation-for="TipoEvento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Lugar" class="form-label">Lugar del Evento</label>
                    <input asp-for="Lugar" class="form-control" />
                    <span asp-validation-for="Lugar" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="form-label">Fecha del Evento</label>
                    <input asp-for="Fecha" type="date" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Hora" class="form-label">Hora del Evento</label>
                    <input asp-for="Hora" type="time" class="form-control" />
                    <span asp-validation-for="Hora" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="ListaEventosAdmin" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
