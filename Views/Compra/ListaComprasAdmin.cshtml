@model IEnumerable<Proyecto_DSWI_GP3.Models.Compras>

@{
    ViewData["Title"] = "Lista de Compras";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <h1 class="mb-4 text-center">Lista de Compras</h1>

    <hr />

    <table class="table table-striped table-borderless text-white">
        <thead style="background-color: #2a2a2a;">
            <tr>
                <th>Código</th>
                <th>Cliente</th>
                <th>Fecha de Compra</th>
                <th>Método de Pago</th>
                <th>Estado del Pago</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="background-color: #1e1e1e;">
                    <td>@item.IdCompra</td>
                    <td>@item.IdUsuario</td>
                    <td>@item.FechaCompra.ToString("dd/MM/yyyy")</td>
                    <td>@item.MetodoPago</td>
                    <td>
                        <span class="badge bg-@(item.EstadoPago == "Pendiente" ? "warning text-dark" : "success")">
                            @item.EstadoPago
                        </span>
                    </td>
                    <td>
                      @*   <a asp-action="Edit" asp-route-id="@item.IdCompra" class="btn btn-sm btn-outline-warning me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a> *@
                        <a asp-action="Details" asp-route-id="@item.IdCompra" class="btn btn-sm btn-outline-info me-1">
                            <i class="bi bi-info-circle"></i>
                        </a>
                       @*  <a asp-action="Delete" asp-route-id="@item.IdCompra" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
